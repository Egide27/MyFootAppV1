<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfilFragment">


    <TextView
        android:id="@+id/tv_show_lastname_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:text="Kevin Debruyne"
        app:layout_constraintBottom_toBottomOf="@+id/tv_show_firstname_profil_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_show_firstname_profil_fragment"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_show_firstname_profil_fragment"
        android:layout_width="102dp"
        android:layout_height="20dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="224dp"
        android:text="FirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_birthday_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:text="Date de naisance :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_show_firstname_profil_fragment" />

    <TextView
        android:id="@+id/tv_show_birthday_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:text="28-06-1991"
        app:layout_constraintBottom_toBottomOf="@+id/tv_birthday_profil_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_birthday_profil_fragment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_height_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="Height :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_birthday_profil_fragment" />

    <TextView
        android:id="@+id/tv_show_height_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.81 m"
        app:layout_constraintBottom_toBottomOf="@+id/tv_height_profil_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toEndOf="@+id/tv_height_profil_fragment"
        app:layout_constraintTop_toTopOf="@+id/tv_height_profil_fragment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_weight_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:text="Weight :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_height_profil_fragment" />

    <TextView
        android:id="@+id/tv_show_weight_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="152dp"
        android:text="78 kg"
        app:layout_constraintBottom_toBottomOf="@+id/tv_weight_profil_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_weight_profil_fragment"
        app:layout_constraintTop_toTopOf="@+id/tv_weight_profil_fragment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_current_team_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:text="Current team :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_weight_profil_fragment" />

    <TextView
        android:id="@+id/tv_show_current_team_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manchester City"
        app:layout_constraintBottom_toBottomOf="@+id/tv_current_team_profil_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toEndOf="@+id/tv_current_team_profil_fragment"
        app:layout_constraintTop_toTopOf="@+id/tv_current_team_profil_fragment"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_previous_profil_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:clickable="true"
        android:src="@drawable/precc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_team_profil_fragment"
        app:layout_constraintVertical_bias="0.757" />

</androidx.constraintlayout.widget.ConstraintLayout>